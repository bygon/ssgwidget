<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="center_horizontal" 
    tools:context=".SEAdWidget">
    
    <include 
    	android:id="@+id/include_top"
    	layout="@layout/title"    
    />
    
    <LinearLayout 
	     android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:layout_marginTop="10dp"
         android:gravity="left" >
	    
	    <ImageView
	        android:id="@+id/account"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="22dp"
	        android:layout_marginTop="15dp"
	        android:src="@drawable/sinc5_lauch_images1" />
	    
	    <TextView
	        android:id="@+id/idtxt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="35dp"
	        android:layout_marginLeft="5dp"
	        android:textColor="#353535"
	        android:textSize="15sp"
	        android:text="강위민 님의 포인트11111" />
	    
	</LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:paddingTop="15dp">
        	
        <ImageView
	        android:id="@+id/txnpoint"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/sinc5_ui_05_point_item1" />
		   		    
		    <TextView
		        android:id="@+id/npoint"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"       
		        android:textColor="#4C4C4C"
		        android:layout_marginLeft="3dp"
		        android:textSize="24sp"
		        android:gravity="center_vertical|right"
		        android:paddingRight="10dp"
		        android:background="@drawable/sinc5_ui_point_bg"
		        android:text=""/>
		    
	</LinearLayout>
	
    <LinearLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:paddingTop="10dp">
        	
        <ImageView
	        android:id="@+id/txapoint"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/sinc5_ui_05_point_item2" />        
		   		    
		    <TextView
		        android:id="@+id/apoint"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"       
		        android:textColor="#4C4C4C"
		        android:layout_marginLeft="3dp"
		        android:textSize="24sp"
		        android:gravity="center_vertical|right"
		        android:paddingRight="10dp"
		        android:background="@drawable/sinc5_ui_point_bg"
		        android:text=""/>
		    
	</LinearLayout>
	    
    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_marginTop="20dp"
        android:background="@drawable/sinc5_ui_05_point_btn"/>
	    
</LinearLayout>