<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:background="#ffffff"
    tools:context=".SEAdWidget" >
    
    <include 
    	android:id="@+id/include_top"
    	layout="@layout/title"    
    />
        
		    <ImageView
		        android:id="@+id/idtxt"
		        android:layout_width="80dp"
		        android:layout_height="30dp"
		        android:layout_marginTop="80dp"
		        android:layout_marginLeft="35dp"
		        android:src="@drawable/sinc5_ui_04_login_item1" />    
		    
		    <EditText
		        android:id="@+id/id"
		        android:layout_width="168dp"
		        android:layout_height="30dp"        
		        android:layout_marginTop="80dp"        
		        android:textColor="#4C4C4C"
		        android:layout_marginLeft="107dp" 
		        android:background="@drawable/sinc5_ui_04_login_form"/>
		    
		    <ImageView
		        android:id="@+id/pwtxt"
		        android:layout_width="80dp"
		        android:layout_height="30dp"
		        android:layout_below="@+id/idtxt"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="35dp"
		        android:src="@drawable/sinc5_ui_04_login_item2" />
		
		    <EditText
		        android:id="@+id/pw"
		        android:layout_width="168dp"
		        android:layout_height="30dp"        
		        android:layout_below="@+id/id"
		        android:inputType="textPassword"
		        android:textColor="#4C4C4C" 
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="107dp" 
		        android:background="@drawable/sinc5_ui_04_login_form"/>
		    
		    <Button
		        android:id="@+id/account_login"
		        android:layout_width="230dp"
		        android:layout_height="30dp"
		        android:layout_below="@+id/pwtxt"
		        android:layout_centerHorizontal="true"
		        android:gravity="center"
		        android:layout_marginTop="17dp"
		        android:background="@drawable/sinc5_ui_04_login_btn1"/>
		    
		    <TextView
		        android:id="@+id/hompagemsg"
		        android:layout_width="match_parent"
		        android:layout_height="30dp"
		        android:gravity="center"
		        android:layout_below="@+id/account_login"
		        android:layout_marginTop="50dp"
		        android:textColor="#353535"
		        android:text="회원가입은 신세계 포인트에서 해주세요." />
		    
		    <Button
		        android:id="@+id/homepage"
		        android:layout_width="230dp"
		        android:layout_height="30dp"
		        android:layout_below="@+id/hompagemsg"
		        android:layout_centerHorizontal="true"
		        android:gravity="center"
		        android:background="@drawable/sinc5_ui_04_login_btn2" />
		    
	
   
</RelativeLayout>